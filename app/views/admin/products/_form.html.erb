<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <form class="form-inline" role="form">
  <div class="form-groups">
  <div class="col-sm-10">
  <div class="col-sm-2">
    name
  </div>
  <div class="col-sm-8">
    <%= f.input :name, label: false, placeholder: "Name" %>
  </div>
  <div class="col-sm-10">
    <%= f.input :price, input_html: { min: 0 }  %>
  </div>
  <div class="col-sm-10">
    <%= f.input :quantity, input_html: { min: 0 }  %>
  </div>
  <div class="col-sm-10">
    <%= f.input :description %>
  </div>
  <div class="col-sm-10">
    <%= f.association :category, hint: 'Required' %>
  </div>
  <div class="col-sm-10">
    <%= f.association :brand, hint: 'Required' %>
  </div>
    <p>
      <% if @product.avatar.exists? %>
	<%= image_tag @product.avatar.url(:medium) %>
      <% end %>
    </p>
    <%= f.input :avatar, as: :file %>
  </div>
  </form>
  </div>
  <div class="col-sm-10">

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
