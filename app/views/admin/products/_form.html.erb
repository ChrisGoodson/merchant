<%= simple_form_for([:admin, @product], class: "form-inline") do |f| %>
  <%= f.error_notification %>

  <form class="form-inline" role="form">
    <div class="form-groups">
      <div class="col-sm-10">
	name
	<%= f.input :name, label: false, placeholder: "Name" %>


	<div class="container-fluid">
	  <div class="row">
	    <div class="col-md-4 text-center">
	<br>
	<% case @product.item_amount_type %>
	  <% when 0, 2, 4, 6 %>
	  <%= link_to "Add Per Item", 
	    per_item_admin_product_path(@product),
	    class: 'btn btn-default',
	    method: :put
	    %>
	  <% when 1, 3, 5, 7 %>
	  <%= link_to "Remove Per Item", 
	    per_item_remove_admin_product_path(@product),
	    class: 'btn btn-danger',
	    method: :put
	    %>
	<% end %>
	<br>
	    </div>

	    <div class="col-md-4 text-center">
	<br>
	<% case @product.item_amount_type %>
	  <% when 0, 1, 4, 5 %>
	  <%= link_to "Add Per Pound", 
	    per_pound_admin_product_path(@product),
	    class: 'btn btn-default',
	    method: :put
	    %>
	  <% when 2, 3, 6, 7 %>
	  <%= link_to "Remove Per Pound", 
	    per_pound_remove_admin_product_path(@product),
	    class: 'btn btn-danger',
	    method: :put
	    %>
	<% end %>
	<br>
	    </div>

	    <div class="col-md-4 text-center">
	<br>
	<% case @product.item_amount_type %>
	  <% when 0, 1, 2, 3 %>
	  <%= link_to "Add Per Case", 
	    per_case_admin_product_path(@product),
	    class: 'btn btn-default',
	    method: :put
	    %>
	  <% when 4, 5, 6, 7 %>
	  <%= link_to "Remove Per Case", 
	    per_case_remove_admin_product_path(@product),
	    class: 'btn btn-danger',
	    method: :put
	    %>
	<% end %>
	<br>
	<br>
	    </div>
	  </div>
	</div>




	<% case @product.item_amount_type %>
	<% when 1, 3, 5, 7 %>
	  <%= f.input :price, input_html: { min: 0 }  %>
	  <%= f.input :quantity, input_html: { min: 0 }  %>
	<% end %>

	<% case @product.item_amount_type %>
	<% when 2, 3, 6, 7 %>
	  <%= f.input :price_per_pound, input_html: { min: 0 }  %>
	  <%= f.input :pounds, input_html: { min: 0 }  %>
	<% end %>

	<% case @product.item_amount_type %>
	<% when 4, 5, 6, 7 %>
	  <%= f.input :price_per_case, input_html: { min: 0 }  %>
	  <%= f.input :case, input_html: { min: 0 }  %>
	<% end %>

	<%= f.input :description %>
	<%= f.association :category, hint: 'Required' %>
	<%= f.association :brand, hint: 'Required' %>
      </div>
      <p>
	<% if @product.avatar.exists? %>
	  <%= image_tag @product.avatar.url(:medium) %>
	<% end %>
      </p>
	<%= f.input :avatar, as: :file %>
    </div>

      <div class="form-actions">
	<%= f.button :submit %>
      </div>

  </form>

<% end %>
