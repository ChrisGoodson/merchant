<div class="col-sm-6 col-md-4 col-lg-3 panel panel-default panel-body">

<h2>Your shopping cart </h2>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
	<th>Product</th>
	<th>Quantity</th>
	<th></th>
      </tr>
    </thead>
    <tbody class="vertical-align">
      <% @cart.line_items.each do |product| %>
	<tr>
	  <td>
	    <%= product.product.name %>
	    <%= image_tag product.product.avatar.url(:thumb) %>
	  </td>
	  <td>
	    <div class="row">
	      <div class="col-md-2 col-lg-3">
	    <%= simple_form_for(product) do |f| %>
	      <%= f.input :quantity, input_html: { min: 0, style: 'width:60px' }, label: false, class: "pull-left"  %>
	      <%= f.button :submit, "Apply", :class => "btn-primary" %>
	    <% end %>
	      </div>
	    </div>
	  </td>
	  <td>
	    <%= link_to "Remove", line_item_path(product.id), method: :delete, class: "btn btn-sm btn-danger vertical-align" %>
	  </td>
	</tr>
      <% end %>
	<th></th>
    </tbody>
  </table>



  <div class="pull-right">
    <%= link_to "Open Cart", edit_cart_path, class: "btn btn-info btn-sm"  %>
    <%= link_to "Empty Cart", @cart, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm"  %>
  </div>

</div>
