
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">

    <%= f.input :name, 
      placeholder: "Input Name", 
      class: "form-control" %>

    <%= f.input :address, 
      placeholder: "Input Address\nHere", 
      class: "form-control"  %>

    <%= f.input :pay_type, 
      collection: Order::PAYMENT_TYPES, 
      prompt: "Input Payment Type", 
      class: "form-control" %>

  </div>

  <div class="form-actions">
    <%= f.submit "Place Order", class: "btn btn-sm btn-success" %>
  </div>

<% end %>

